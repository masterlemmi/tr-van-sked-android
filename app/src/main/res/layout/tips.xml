<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tips_load_current_hour"
        android:id="@+id/swipe_down_refresh_text"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="219dp"
        android:layout_height="126dp"
        android:id="@+id/swipe_down_refresh_image"
        android:background="@drawable/swipdown"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tips_navigate_hour"
        android:id="@+id/tap_left_right_navigate_text"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="219dp"
        android:layout_height="128dp"
        android:id="@+id/tap_left_right_navigate"
        android:background="@drawable/leftright"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>